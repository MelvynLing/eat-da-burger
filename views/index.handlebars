<div class="container">
	<div class="row text-center">
		<div class="col-12 text-center" id="top-bar">
			<img src="../public/images/burger.png" alt="burger"/>
			<h1><strong> Eat-Da-Burger! </strong></h1>
		</div>
    </div>
    <br>
    <br>
    <div class="row text-center">
		<div class="col-12 text-center" class="task">
				{{#each burger_data}}
				    {{#unless this.devoured}}
				<div class="col-12 text-center">
				    <pre>{{this.id}}. {{this.burger_name}}</pre>
				</div>
            <div class="col-12 text-center">
                	<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
					<input type="hidden" type="text" name="burger_id" value={{this.id}}>
					<button type="submit" class="btn btn-default">Devour it!</button>
                    <br>
                    <br>
                    <br>
				</form>
			</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
            <div class="container">
                <div class="container">
                    <div class="container">
                        <hr>
                        <br>
                        <h2>BURGERS THAT HAVE BEEN DEVOURED:</h2>
                        <br>
                    </div>
                </div>
            </div>
        <div class="row text-center">
            <div class="col-12 text-center">
                {{#each burger_data}}
                    {{#if this.devoured}}
                    <input class="form-control text-center" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                    {{/if}}
                {{/each}}
            </div>
        </div>

        <div class="row text-center">
            <div class="col-12 text-center enter_selection">
                <br>
                <form action="/burgers/create" method="POST">
                    <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                    <br>
                    <button type="submit" class="btn btn-primary" id="text-enter-button">Submit!</button> 
                </form>
                <br>
                <p>ENTER A BURGER THAT YOU'D LIKE TO EAT</p>
                <br>
            </div>
        </div>
</div>


